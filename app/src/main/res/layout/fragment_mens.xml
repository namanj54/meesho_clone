<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.MensFragment"
    android:background="@color/gray_color">

    <ScrollView
        android:id="@+id/mainview"
        android:nestedScrollingEnabled="false"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Show Stoppers"
                    android:textAlignment="center"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/white"
                    android:textSize="10pt"
                    android:textStyle="bold"
                    android:background="@drawable/show_stoppers"/>



                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mens_cat"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Wedding Season Special"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:layout_marginTop="4dp"

                    android:textSize="10pt"
                    android:textStyle="bold"
                    android:background="@drawable/show_stoppers"/>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/wed_rec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@color/white"
                    android:orientation="horizontal"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Summer Collection"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:layout_marginTop="4dp"
                    android:textSize="10pt"
                    android:textStyle="bold"
                    android:background="@drawable/show_stoppers"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/summer_rec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@color/white"
                    android:orientation="horizontal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Top Brands"
                    android:layout_marginTop="4dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="10pt"
                    android:textStyle="bold"
                    android:background="@drawable/show_stoppers"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/brands_rec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@color/white"
                    android:orientation="horizontal"/>




                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:background="@drawable/bg_simpel_border"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                        <HorizontalScrollView
                            android:nestedScrollingEnabled="false"
                            android:fillViewport="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >

                            <LinearLayout
                                android:layout_gravity="center"
                                android:weightSum="4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:orientation="horizontal">

                                <TextView
                                    android:textAlignment="center"
                                    android:layout_weight=".8"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/foryou"
                                    android:text="Sort"
                                    android:drawableLeft="@drawable/baseline_keyboard_double_arrow_down_24"
                                    android:textColor="@color/black"
                                    android:textStyle="bold">
                                </TextView>
                                <View
                                    android:layout_marginStart="3dp"
                                    android:layout_marginEnd="3dp"
                                    android:background="@color/black"
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"/>
                                <TextView
                                    android:layout_weight="1.2"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="Category"
                                    android:drawableRight="@drawable/baseline_keyboard_arrow_down_24"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    />
                                <View
                                    android:layout_marginStart="3dp"
                                    android:layout_marginEnd="3dp"
                                    android:background="@color/black"
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"/>                <TextView
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Gender"
                                android:drawableRight="@drawable/baseline_keyboard_arrow_down_24"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                />
                                <View
                                    android:layout_marginStart="3dp"
                                    android:layout_marginEnd="3dp"
                                    android:background="@color/black"
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"/>
                                <TextView
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="Filters"
                                    android:drawableLeft="@drawable/baseline_sort_24"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    />



                            </LinearLayout>
                        </HorizontalScrollView>



                    </LinearLayout>

                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mencat_rec"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"/>




                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mensprod"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray_color">
                </androidx.recyclerview.widget.RecyclerView>


            </LinearLayout>

        </RelativeLayout>
    </ScrollView>



</FrameLayout>