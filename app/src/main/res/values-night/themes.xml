<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewProjectSetup" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryVariant">@color/pink</item>
        <item name="colorOnPrimary">@color/pink</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink</item>
        <item name="colorSecondaryVariant">@color/pink</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="buttonStyle">@style/myButtonstyle</item>
        <item name="android:textViewStyle">@style/mytextview</item>
        <item name="android:editTextStyle">@style/edittextstyle</item>
        <item name="spinnerStyle">@style/spinner_style</item>

    </style>

    <style name="BottomNavigationView.ActiveIndicator." parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/pink</item>
    </style>
    <style name="BottomNavigationView.inActiveIndicator." parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="myButtonstyle" parent="Widget.AppCompat.Button">
        <item name="background">@color/pink</item>
        <item name="backgroundTint">@color/pink</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="mytextview" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="edittextstyle" parent="Widget.AppCompat.EditText">
        <item name="hintTextColor">@color/pink</item>
        <item name="textFillColor">@color/pink</item>
        <item name="android:textColorHint">@color/black</item>
    </style>
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">@color/black</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:tint">@color/black</item>
    </style>
    <style name="spinner_style" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:background">@drawable/spiner_bg</item>
        <item name="android:gravity" >center</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:autoSizeMinTextSize" tools:ignore="NewApi">6pt</item>


    </style>

</resources>